    <!-- Provider Register Modal -->
    <div class="modal account-modal fade multi-step" id="provider-register" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header p-0 border-0">
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="login-header">
                        <h3>Join as a Provider</h3>
                    </div>

                    <!-- Register Form -->
                    <form asp-action="provider_registration" asp-controller="Home" method="post" enctype="multipart/form-data">
                        <div class="form-group form-focus">
                            <label class="focus-label">Name</label>
                            <input type="text" class="form-control" placeholder="john" name="name">
                        </div>
                        <div class="form-group form-focus">
                            <label class="focus-label">Create Email</label>
                            <input type="email" class="form-control" placeholder="email@gmail.com" name="email">
                        </div>
                        <div class="form-group form-focus">
                            <label class="focus-label">Create Password</label>
                            <input type="password" class="form-control" placeholder="********" name="password">
                        </div>
                         <div class="form-group form-focus">
                            <label class="focus-label">Upload Profile</label>
                            <input type="file" class="form-control" name="FormFile">
                        </div>
                        <div class="text-end">
                            <a class="forgot-link" href="#">Already have an account?</a>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-primary btn-block btn-lg login-btn" type="submit">Signup</button>
                        </div>
                        <div class="login-or">
                            <span class="or-line"></span>
                            <span class="span-or">or</span>
                        </div>
                    </form>
                    <!-- /Register Form -->

                </div>
            </div>
        </div>
    </div>
    <!-- /Provider Register Modal -->





